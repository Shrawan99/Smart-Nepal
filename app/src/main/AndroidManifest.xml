<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.nasa.smart_nepal">
    <uses-sdk
        tools:node="replace" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera" />
    <supports-screens
         android:smallScreens="true"
         android:normalScreens="true"
         android:largeScreens="true"
         android:xlargeScreens="true"
         android:anyDensity="true"
         android:compatibleWidthLimitDp="320"
        />

    <application
        android:allowBackup="true"
        android:icon="@drawable/app_vai_icon"
        android:label="@string/app_name"

        android:theme="@style/AppTheme" >
        <activity
            android:screenOrientation="portrait"
            android:name=".MainActivity"
            android:label="@string/app_name"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".torchActivity"
            android:screenOrientation="portrait"
            android:label="Torch"
            android:parentActivityName=".MainActivity"/>
        <activity
            android:name=".Vegetables"
            android:label="@string/title_activity_vegetables"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.nasa.smart_nepal.MainActivity" />
        </activity>
        <activity
            android:name=".Exchange_Rates"
            android:label="Exchange Rates"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.nasa.smart_nepal.MainActivity" />
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name=".PetroleumOil"
            android:label="Petroleum"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.nasa.smart_nepal.MainActivity" />
        </activity>
        <activity
            android:name=".Bank_activity"
            android:label="Banks of Nepal"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.nasa.smart_nepal.MainActivity" />
        </activity>
        <activity
            android:name=".telephoneActivity"
            android:label="Urgent Number"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.nasa.smart_nepal.MainActivity" />
        </activity>
        <activity
            android:name=".HotelActivity"
            android:label="Hotels Of Kathmandu"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.nasa.smart_nepal.MainActivity" />
        </activity>
        <activity
            android:name=".HospitalActivity"
            android:label="Hospitals Of Kathmandu"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.nasa.smart_nepal.MainActivity" />
        </activity>
        <activity android:name="com.example.nasa.smart_nepal.How_to_use"
            android:label="How to use"
            android:parentActivityName="com.example.nasa.smart_nepal.MainActivity">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.nasa.smart_nepal.MainActivity" />
        </activity>
        <activity android:name="com.example.nasa.smart_nepal.Loadsheding"
            android:label="Loadsheding Routine"
            android:parentActivityName="com.example.nasa.smart_nepal.MainActivity">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.nasa.smart_nepal.MainActivity" />
        </activity>
    </application>

</manifest>




